<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/product"
        android:layout_width ="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Product"/>
    <EditText
        android:id="@+id/product_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/product"
        android:layout_marginRight="10dp"
        android:inputType="text"
        android:hint="Apples,Bacon,Nuggets..."
        android:width="150dp"/>
    <TextView
        android:id="@+id/count"
        android:layout_width ="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Amount"/>
    <EditText
        android:id="@+id/count_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/count_text"
        android:layout_marginRight="10dp"
        android:inputType="text"
        android:hint="1,2,3,4..."
        android:width="150dp"/>
    <TextView
        android:id="@+id/price"
        android:layout_width ="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Price(â‚¬)"/>
    <EditText
        android:id="@+id/price_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/price"
        android:layout_marginRight="10dp"
        android:inputType="text"
        android:hint="1.20, 10, 15..."
        android:width="150dp"/>

</LinearLayout>